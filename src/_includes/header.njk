<header>
    <div class="container">
        <a href="/"><img class="logo" src="/media/chiroherent.svg" alt="Chiro Herent" /></a>
        <img class="hamburger" src="/media/hamburger.png" onclick="hamburgerMenu()" />
        <nav id="navbar">
            <!-- De navbar wordt gemaakt door eleventy, het bevat alle pagina's met de tag 'navbar' -->
            <ul>
                {%- for post in collections.NavbarSorted -%}
                {% if page.url==post.url %} <li class="huidig" aria-current="page">{{post.data.title }}</li> {% else %}
                <li><a href={{post.url}}>{{post.data.title }}</a></li> {% endif %}
                {%- endfor -%}
            </ul>
        </nav>
    </div>
</header>
<!-- navbar.js zorgt voor het hamburger menu op smalle schermen -->
<script src="/scripts/navbar.js"></script>