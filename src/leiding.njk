<!-- De info hier wordt bepaald door _data/leiding.yaml -->
{% set map = {
verantwoordelijken: {hoofdleiding: "Hoofdleiding", vb: "Volwassen begeleiders"},
kiekeboes: {kiekeboes: "Kiekeboes"},
speelclub: {speelclub: "Speelclub"},
rakwis: {kwikken: "Kwikken", rakkers: "Rakkers"},
titos: {tippers: "Tippers", toppers: "Toppers"},
ketis: {tiptiens: "Tiptiens", kerels: "Kerels"},
aspis: {aspimeisjes: "Aspi-meisjes", aspijongens: "Aspi-jongens"}
} %}

{% for class, groupObj in map %}
<div class="{{ class }}">
  {% for group, groupName in groupObj %}
  <h3>{{ groupName}}</h3>
  <dl id="{{ group }}">
    {% for leiding in leiding[group] %}
    <dt><strong>{{ leiding.name }}</strong></dt>
    {% if leiding.email != null %}<dd><a href="mailto:{{ leiding.email }}">{{ leiding.email }}</a></dd>{% endif %}
    {% if leiding.phone != null %}<dd>{{ leiding.phone }}</dd>{% endif %}
    {% endfor %}
  </dl>
  {% endfor %}
</div>
{% endfor %}